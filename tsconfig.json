{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@shared/*": ["shared/*"],
      "@assets/*": ["assets/*"],
      "@styles/*": ["styles/*"],
      "@config/*": ["config/*"],
      "@services/*": ["services/*"],
      "@lib/*": ["lib/*"],
      "@hooks/*": ["hooks/*"],
      "@context/*": ["context/*"],
      "@graphql/*": ["graphql/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
